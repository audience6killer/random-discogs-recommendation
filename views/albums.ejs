<%- include("partials/header.ejs") %>
<div class="row py-3 px-3 justify-content-center text-center">
    <div class="col-lg-6 col-xl-6 ">
        <h1>Albums: <%= locals.genre %></h1>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-6 col-xl-6 justify-content-center album-carousel">
        <div id="albumCarousel" class="carousel slide album-item">
            <div class="carousel-inner">
              <% if (locals.albumList) { %>
                <div class="carousel-item active">
                  <img src="<%= albumList[0].cover_image %>" class="d-block w-100" alt="...">
                  <div class="card middle" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%= albumList[0].album %></h5>
                      <h6 class="card-subtitle mb-2 text-body-secondary"><%= albumList[0].artist %></h6>
                      <h7 class="card-subtitle mb-2 text-body-secondary"><%= albumList[0].year %></p>
                      <a href="<%= albumList[0].discogs_link %>" class="card-link" target="_blank">Discogs</a>
                    </div>
                  </div>        
                </div>
                <% for( let index = 1; index < locals.albumList.length; index++ ) { %>
                  <div class="carousel-item">
                    <img src="<%= albumList[index].cover_image %>" class="d-block w-100" alt="...">
                    <div class="card middle" style="width: 18rem;">
                      <div class="card-body">
                        <h5 class="card-title"><%= albumList[index].album %></h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary"><%= albumList[index].artist %></h6>
                        <h7 class="card-subtitle mb-2 text-body-secondary"><%= albumList[index].year %></p>
                        <a href="<%= albumList[index].discogs_link %>" class="card-link" target="_blank">Discogs</a>
                      </div>
                    </div>            
                  </div>
                <% } %>
              <% } %>
                       
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#albumCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#albumCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>


<%- include("partials/footer.ejs") %>